<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/camerabt"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:background="@drawable/custom_disabled_bt"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/camera_input"

        android:textAllCaps="false"
        android:textColor="@color/disabledColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manualbt"
        app:layout_constraintVertical_bias="0.120" />

    <Button
        android:id="@+id/manualbt"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:background="@drawable/custom_button"

        android:fontFamily="@font/poppins_bold"

        android:onClick="openManualActivity"
        android:text="@string/manual_input"
        android:textAllCaps="false"
        android:textColor="@color/white"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="297dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>